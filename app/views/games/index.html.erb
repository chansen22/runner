<h1>Listing games</h1>

<table>
  <tr>
    <th>Name</th>
    <th>System</th>
    <th>Release year</th>
    <th>Publisher</th>
    <th>Series</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.name %></td>
    <td><%= game.system %></td>
    <td><%= game.release_year %></td>
    <td><%= game.publisher %></td>
    <td><%= game.series %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

