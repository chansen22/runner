= form_for(@game) do |f|

  - if @game.errors.any?
    #error_explanation
      %div{:class => "alert alert-error"}
        %a.close{"data-dismiss" => "alert"} Ã—
        %h2= pluralize(@game.errors.count, "error")
        prohibited this game from being saved:
        %ul
          - @game.errors.full_messages.each do |msg|
            %li= msg

  .field
    = f.label :name
    = f.text_field :name, required: true

  .field
    = f.label :system
    = f.text_field :system, required: true
    
  .field
    = f.label :release_year
    = f.number_field :release_year, value: 2000, required: true

  .field
    = f.label :publisher
    = f.text_field :publisher, required: true

  .field
    = f.label :series
    = f.text_field :series, required: true

  .actions
    = f.submit
