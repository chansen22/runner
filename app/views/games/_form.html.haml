= form_for(@game) do |f|
  - if @game.errors.any?
    #error_explanation
      %h2= pluralize(@game.errors.count, "error")
      prohibited this game from being saved:

      %ul
      - @game.errors.full_messages.each do |msg|
        %li= msg

  .field
    = f.label :name
    = f.text_field :name

  .field
    = f.label :system
    = f.text_field :system
    
  .field
    = f.label :release_year
    = f.number_field :release_year

  .field
    = f.label :publisher
    = f.text_field :publisher

  .field
    = f.label :series
    = f.text_field :series

  .actions
    = f.submit
