= form_for(@comment) do |f|
  - if @comment.errors.any?
    #error_explanation
      %h2= pluralize(@comment.errors.count, "error")
			prohibited this comment from being saved:

      %ul
      - @comment.errors.full_messages.each do |msg|
        %li= msg

  .field
    = f.label :text
		%br
    = f.text_area :text, cols: 25, rows: 5
		
  .actions
    =f.submit
