= form_for([:game, @run]) do |f|
  - if @run.errors.any?
    #error_explanation
      %h2= pluralize(@run.errors.count, "error")
      prohibited this run from being saved:

      %ul
      - @run.errors.full_messages.each do |msg|
        %li= msg
        

  .field
    = f.label :url
    = f.url_field :url, required: true
  .field
    = f.label :category
    = f.text_field :category
  .field
    = f.label :time_in_seconds, "Time eg: HH:MM:SS"
    = f.text_field :time_in_seconds

  .actions
    = f.submit
