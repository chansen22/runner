= form_for(@run) do |f|
  - if @run.errors.any?
    #error_explanation
      %h2= pluralize(@run.errors.count, "error")
      prohibited this run from being saved:

      %ul
      - @run.errors.full_messages.each do |msg|
        %li= msg
        

  .field
    = f.label :url
    %br
    = f.text_field :url
  .field
    = f.label :verified
    %br
    = f.check_box :verified
    
  .field
    = f.label :category
    %br
    = f.text_field :category
  .field
    = f.label :time_in_seconds
    %br
    = f.number_field :time_in_seconds

  .actions
    = f.submit
